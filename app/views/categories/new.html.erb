<div class="page-header">
  <h1>New Category</h1>
</div>

<% if@category.errors.any? %>
  <% @category.errors.full_messages.each do |message| %>
    <div class = "alert alert-dismissable alert-danger">
      <button type = "button" class = "close" data-dismiss = "alert" aria-hidden = "true">&times;</button>
        <%= message %>
    </div>
  <% end %>
<% end %>

<%= form_tag(categories_url, method: 'post', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :name, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :name, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :account_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= select_tag :account_id, options_from_collection_for_select(Account.all, :id, :nickname,), class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Create Category", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
