<div class = "row">
  <div class = "col-lg-12">
    <div class = "page-header">
      <h1>Your Tasks</h1>
      <p>Find tasks assigned to: <%= link_to current_account.person1, "/tasks?person1=#{true}" %>   <%= link_to current_account.person2, "/tasks?person2=#{true}" %> </p>
    </div>

<p><%= link_to 'Add a New Task', new_task_url, class: 'btn btn-primary' %></p>


    <div class = "table-responsive">
      <table class = "table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>Task</th>
            <th>Due Date</th>
            <th>Category</th>
            <th>Complete?</th>
            <th>Assigned to:</th>
            <th>Options</th>
          </tr>
        </thead>
        <tbody>
          <% @tasks.each do |task| %>
            <tr>
              <td> <%= task.title %> </td>
              <td> <%= task.due_date %> </td>
              <td> <%= task.category.name %> </td>
              <td>
                <% if task.complete? == true %>
                  Good to go!
                  <% else %>
                  Not yet
                  <% end %>
              </td>
              <td>
                <% if task.person1? == true %>
                  <img src = "<%= current_account.person1_picture %>" width = "40px" class = "img-circle">
                  <% else %>
                  <% end %>
                <% if task.person2? == true %>
                  <img src = "<%= current_account.person2_picture %>" width = "40px" class = "img-circle">
                  <% else %>
                  <% end %>
              </td>
              <td> <%= link_to "Details".html_safe, task_url(task)%> - <%= link_to "Edit".html_safe, edit_task_url(task)%> - <%= link_to "Delete".html_safe, task_url(task), method: 'delete', data: { confirm: "Do you really want to delete this task?" }%> </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
