<div class="page-header">
  <h1>New Task</h1>
</div>

<% if@task.errors.any? %>
  <% @task.errors.full_messages.each do |message| %>
    <div class = "alert alert-dismissable alert-danger">
      <button type = "button" class = "close" data-dismiss = "alert" aria-hidden = "true">&times;</button>
        <%= message %>
    </div>
  <% end %>
<% end %>

<%= form_tag(tasks_url, method: 'post', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :title, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :title, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :due_date, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= date_field_tag :due_date, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :description, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_area_tag :description, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :category_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= select_tag :category_id, options_from_collection_for_select(Category.all, :id, :name,), class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :complete, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= check_box_tag :complete %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :person1, "Person 1", class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= check_box_tag :person1 %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :person2, "Person 2", class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= check_box_tag :person2 %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Create Task", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
