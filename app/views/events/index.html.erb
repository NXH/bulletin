<div class = "row">
  <div class = "col-lg-12">
    <div class = "page-header">
      <h1>Your Events</h1>
      <% (Event.count / 20.0).ceil.times do |page| %>
        <%= link_to "Page #{page + 1}", "/events?page=#{page + 1}" %>
        <% end %>
    </div>


<p><%= link_to 'Add a New Event', new_event_url, class: 'btn btn-primary' %></p>

    <div class = "table-responsive">
      <table class = "table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>Event</th>
            <th>Start Time</th>
            <th>End Time</th>
            <th>Category</th>
            <th>Person 1?</th>
            <th>Person 2?</th>
            <th>Options</th>
          </tr>
        </thead>
        <tbody>
          <% @events.each do |event| %>
            <tr>
              <td> <%= event.title %> </td>
              <td> <%= event.start_time.to_formatted_s(:short) %> </td>
              <td> <%= event.end_time.to_formatted_s(:short) %> </td>
              <td> <%= event.category.name %> </td>
              <td> <%=  event.person1? %> </td>
              <td> <%=  event.person2 %> </td>
              <td> <%= link_to "Details".html_safe, event_url(event)%> - <%= link_to "Edit".html_safe, edit_event_url(event)%> - <%= link_to "Delete".html_safe, event_url(event), method: 'delete', data: { confirm: "Do you really want to delete this event?" }%> </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
