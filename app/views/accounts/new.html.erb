<div class="page-header">
  <h1>New Account</h1>
</div>
<%= form_tag(accounts_url, method: 'post', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :nickname, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :nickname, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :person1, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :person1, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :person2, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :person2, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :person1_email, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :person1_email, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :person2_email, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :person2_email, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :password_digest, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :password_digest, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Create Account", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
