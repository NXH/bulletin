<div class = "row">
  <div class = "col-lg-12">
    <div class = "page-header">
      <h1>Accounts</h1>
    </div>

<p><%= link_to 'Add a New Account', new_account_url, class: 'btn btn-primary' %></p>

    <div class = "table-responsive">
      <table class = "table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>Account Name</th>
            <th>Person 1</th>
            <th>Person 2</th>
            <th>Person 1 Email Address</th>
            <th>Person 2 Email Address</th>
            <th>Password</th>
            <th>Options</th>
          </tr>
        </thead>
        <tbody>
          <% @accounts.each do |account| %>
            <tr>
              <td> <%= account.nickname %> </td>
              <td> <%= account.person1 %> </td>
              <td> <%= account.person2 %> </td>
              <td> <%= account.person1_email %> </td>
              <td> <%= account.person2_email %> </td>
              <td> <%= account.password_digest %> </td>
              <td> <%= link_to "Details".html_safe, account_url(account)%> - <%= link_to "Edit".html_safe, edit_account_url(account)%> - <%= link_to "Delete".html_safe, account_url(account), method: 'delete', data: { confirm: "Do you really want to delete this account?" }%> </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
