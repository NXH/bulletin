<div class="page-header">
  <h1>Accounts</h1>
</div>

<p><%= link_to 'Add a New Account', new_account_url, class: 'btn btn-primary' %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nickname</th>
      <th>Person 1</th>
      <th>Person 2</th>
      <th>First person's email</th>
      <th>Second person's email</th>
      <th>Password</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.nickname %></td>
        <td><%= account.person1 %></td>
        <td><%= account.person2 %></td>
        <td><%= account.person1_email %></td>
        <td><%= account.person2_email %></td>
        <td><%= account.password_digest %></td>
        <td><%= link_to '<i class="fa fa-search-plus"></i>'.html_safe, account_url(account), class: 'btn btn-primary' %></td>
        <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_account_url(account), class: 'btn btn-warning' %></td>
        <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, account_url(account), method: 'delete', data: { confirm: "Do you really want to delete this account?" }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

